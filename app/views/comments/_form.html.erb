<%= turbo_frame_tag "new_comment-#{post.id}" do %>
	  <%= form_with model: Comment.new, url: post_comments_path(post.id), class: "comment-form", data: { post_target: "form" } do |form| %>
	    <p>
	      <%= form.text_area :content, placeholder: "Add a comment.." %>
	    </p>
	    <p>
	      <%= form.submit "Post", class: "post-btn" %>
	    </p>
	  <% end %>
<% end %>